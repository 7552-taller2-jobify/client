<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/professional_row_picture"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/people"
        android:layout_marginLeft="10dp" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:paddingLeft="6dp">

            <TextView
                android:id="@+id/professional_row_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Apellido, Nombre"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/professional_row_address"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="DirecciÃ³n cliente" />

            <TextView
                android:id="@+id/professional_row_company"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Razon Social" />

        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:id="@+id/client_row_professional_heart_empty"
                    android:src="@drawable/ic_heart_empty"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_heart"
                    android:id="@+id/client_row_professional_heart"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
            </FrameLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/ic_star"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/client_row_professional_votes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:gravity="right"
                android:text="# 123"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_weight="0.06"
                android:layout_marginTop="4dp" />

        </LinearLayout>


    </LinearLayout>
</LinearLayout>
