<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:background="@drawable/navigation_drawer_background"
    android:orientation="vertical"
    >


    <ImageView
        android:id="@+id/menu_header_logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/icon"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="@string/nav_header_main_vendor_name_default"
        android:textColor="@color/cardview_dark_background"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:id="@+id/nav_header_main_vendor_name"
        android:layout_marginTop="134dp"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="@string/nav_header_main_vendor_email_default"
        android:textColor="@color/cardview_dark_background"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:id="@+id/nav_header_main_vendor_email"
        android:layout_marginTop="156dp"
        android:layout_marginLeft="20dp" />

    <!--
        <TextView
